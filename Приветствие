package org.example;

public class Untitled {
    public static void main(String[] args) {
        int day = 6;
        int time = 19;

        if (day < 6) {
            if (time < 6) {
                System.out.println("Доброе утро");
            } else if (time < 10) {
                System.out.println("Все пропало! Ты проспал");
            } else if (time < 11) {
                System.out.println("Включай почту, составляй письмо, что сегодня будет отгул!");
            }
        } else {
            if (time < 12) {
                System.out.println("Доброе утро!");
            } else if (time < 16) {
                System.out.println("Лучше поспать еще!");
            } else  if (time < 18) {
                System.out.println("Вставай, тебя ждет недоигранный Ведьмак!");
            } else {
                System.out.println("Дааа, с режимом надо что-то делать....");
            }

        }


    }
 }

